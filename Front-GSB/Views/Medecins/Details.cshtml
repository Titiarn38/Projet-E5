@model Model.Medecin

@{
    ViewBag.Title = "Details";
}

<h2>Détails du médecin</h2>

<div>
    <h4>@Html.DisplayFor(model => model.nom) @Html.DisplayFor(model => model.prenom)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nom du département")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Departement.dep_name)
        </dd>

        <dt>
            @Html.DisplayName("Prénom")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.prenom)
        </dd>

        <dt>
            @Html.DisplayName("Nom")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom)
        </dd>

        <dt>
            @Html.DisplayName("Adresse")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.adresse)
        </dd>

        <dt>
            @Html.DisplayName("Téléphone")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telephone)
        </dd>

        <dt>
            @Html.DisplayName("Spécialité")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.specialite)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Retour à la liste", "Index")
</p>
